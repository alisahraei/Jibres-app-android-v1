<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activity.intro.IntroActivity"
    tools:ignore="UnusedAttribute">

    <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
        android:id="@+id/recyclerViewPager_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rvp_triggerOffset="0.1"
        app:rvp_singlePageFling="true"
        android:clipToPadding="false"/>

    <View
        android:id="@+id/bg_dots"
        android:background="#000000"
        android:alpha="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/box"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/box"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/nexts"
            android:tag="next"
            android:onClick="btn_intro"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/row_background"
            android:padding="@dimen/_10sdp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_12ssp"
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/next"
            android:tag="next"
            android:src="@drawable/icon_felesh"
            android:onClick="btn_intro"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/row_background"
            android:tint="#fff"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>

        <me.relex.circleindicator.CircleIndicator2
            android:id="@+id/indicator"
            app:ci_width ="5dp"
            app:ci_height ="5dp"
            app:ci_margin ="5dp"

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/skip"
            android:layout_toStartOf="@+id/next" />

        <TextView
            android:visibility="invisible"
            android:enabled="false"
            android:id="@+id/skip"
            android:tag="skip"
            android:onClick="btn_intro"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/row_background"
            android:padding="@dimen/_10sdp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_12ssp"
            android:text="Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>