<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layoutDirection="ltr"
    android:nextFocusDown="@id/edt_verify1_login"
    android:layout_width="match_parent"
    android:gravity="center|top"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_centerInParent="true"

        app:cardCornerRadius="10dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Verification"

                android:layout_marginBottom="@dimen/_15ssp"
                android:textStyle="bold"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/text"

                />

            <LinearLayout
                android:id="@+id/box_number"
                android:layout_below="@+id/title"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_the_otp"

                    android:textStyle="normal"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/text_fade"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"

                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/text"
                        />

                    <TextView
                        android:id="@+id/editNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3faedf"
                        android:text="@string/edit"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/number"
                        android:onClick="enter"
                        android:tag="verifyNumber"

                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        />

                </RelativeLayout>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/xbox_verfiy"
                android:layout_below="@+id/box_number"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center|top"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_verify1_login"
                    android:focusable="true"
                    android:nextFocusDown="@id/edt_verify2_login"
                    style="@style/style_enter_verify_editeText" />
                <EditText
                    android:id="@+id/edt_verify2_login"
                    android:focusable="true"
                    android:nextFocusDown="@id/edt_verify3_login"
                    style="@style/style_enter_verify_editeText"  />
                <EditText
                    android:id="@+id/edt_verify3_login"
                    android:focusable="true"
                    android:nextFocusDown="@id/edt_verify4_login"
                    style="@style/style_enter_verify_editeText" />
                <EditText
                    android:id="@+id/edt_verify4_login"
                    android:focusable="true"
                    android:nextFocusDown="@id/edt_verify5_login"
                    style="@style/style_enter_verify_editeText"  />
                <EditText
                    android:id="@+id/edt_verify5_login"
                    android:focusable="true"
                    style="@style/style_enter_verify_editeText"/>
            </LinearLayout>

            <TextView
                android:id="@+id/resend"
                android:textColor="#3faedf"
                android:layout_below="@+id/xbox_verfiy"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10ssp"
                android:text="@string/resend"
                android:enabled="false"
                android:onClick="enter"
                android:tag="resendCode"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</RelativeLayout>