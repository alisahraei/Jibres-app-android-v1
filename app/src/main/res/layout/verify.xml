<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layoutDirection="ltr"
    android:nextFocusDown="@id/edt_verify1_login"
    android:layout_width="match_parent"
    android:gravity="center|top"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_centerInParent="true"

        app:cardCornerRadius="10dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            >

            <TextView
                android:id="@+id/textViewTitleVerify_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Verification"

                android:layout_marginBottom="@dimen/_15ssp"
                android:textStyle="bold"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/text"

                />

            <LinearLayout
                android:id="@+id/xdesc_verify"
                android:layout_below="@+id/textViewTitleVerify_login"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_the_otp"

                    android:textStyle="normal"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/text_fade"
                    />
                <TextView
                    android:id="@+id/xtext_number_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+98 919 519 1387"

                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/text"
                    />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/xbox_verfiy"
                android:layout_below="@+id/xdesc_verify"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center|top"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_verify1_login"
                    android:focusable="true"
                    android:nextFocusDown="@id/edt_verify2_login"
                    style="@style/style_enter_verify_editeText" />
                <EditText
                    android:id="@+id/edt_verify2_login"
                    android:focusable="true"
                    android:nextFocusDown="@id/edt_verify3_login"
                    style="@style/style_enter_verify_editeText"  />
                <EditText
                    android:id="@+id/edt_verify3_login"
                    android:focusable="true"
                    android:nextFocusDown="@id/edt_verify4_login"
                    style="@style/style_enter_verify_editeText" />
                <EditText
                    android:id="@+id/edt_verify4_login"
                    android:focusable="true"
                    android:nextFocusDown="@id/edt_verify5_login"
                    style="@style/style_enter_verify_editeText"  />
                <EditText
                    android:id="@+id/edt_verify5_login"
                    android:focusable="true"
                    style="@style/style_enter_verify_editeText"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvResndVerify_login"
                android:textColor="#013DA5"
                android:layout_below="@+id/xbox_verfiy"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Resend "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</RelativeLayout>