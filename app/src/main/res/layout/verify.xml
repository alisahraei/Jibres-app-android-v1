<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layoutDirection="ltr"
    android:orientation="vertical"
    android:nextFocusDown="@id/edt_verify1_login"
    android:layout_width="match_parent"
    android:gravity="center|top"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textViewTitleVerify_login"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25sp"
        android:text="Phone Verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewNumberVerify_login"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="+98 919 519 1387"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center|top"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_verify1_login"
            android:focusable="true"
            android:nextFocusDown="@id/edt_verify2_login"
            android:maxLines="1"
            android:maxLength="1"
            android:digits="0123456789"
            android:gravity="center"
            android:layout_margin="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@drawable/background_verify"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:singleLine="true"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/edt_verify2_login"
            android:focusable="true"
            android:nextFocusDown="@id/edt_verify3_login"
            android:maxLines="1"
            android:maxLength="1"
            android:digits="0123456789"
            android:gravity="center"
            android:layout_margin="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@drawable/background_verify"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:singleLine="true"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/edt_verify3_login"
            android:focusable="true"
            android:nextFocusDown="@id/edt_verify4_login"
            android:maxLines="1"
            android:maxLength="1"
            android:digits="0123456789"
            android:gravity="center"
            android:layout_margin="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@drawable/background_verify"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:singleLine="true"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/edt_verify4_login"
            android:focusable="true"
            android:nextFocusDown="@id/edt_verify5_login"
            android:maxLines="1"
            android:maxLength="1"
            android:digits="0123456789"
            android:gravity="center"
            android:layout_margin="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@drawable/background_verify"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:singleLine="true"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/edt_verify5_login"
            android:focusable="true"
            android:maxLines="1"
            android:maxLength="1"
            android:digits="0123456789"
            android:gravity="center"
            android:layout_margin="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@drawable/background_verify"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:singleLine="true"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/boxResendVerify_login"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center|top"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleResend_login"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="Didn't you received any code?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvResndVerify_login"
            android:textColor="#045049"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="Resend new code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress_resend"
            android:layout_width="250dp"
            android:layout_height="25dp"/>

    </LinearLayout>


</LinearLayout>