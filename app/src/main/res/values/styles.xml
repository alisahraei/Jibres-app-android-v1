<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
    </style>

    <style name="TextTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/iransans_bold</item>

    </style>


    <style name="cardLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/iransans_bold</item>

    </style>

    <style name="style_enter_phone_editText">
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:digits">0123456789</item>
        <item name="android:gravity">center|left</item>
        <item name="android:hint">@string/enter_number</item>
        <item name="android:inputType">phone</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
    </style>

    <style name="style_enter_verify_editeText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:digits">0123456789</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:paddingStart">@dimen/_1sdp</item>
        <item name="android:paddingEnd">@dimen/_1sdp</item>
        <item name="android:background">@drawable/bg_enter_verify_edittext</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:singleLine">true</item>
    </style>


</resources>
